
<div class="row">
	<div class="col-md-6">
		<h2>Customers</h2>
	</div>
	<div class="col-md-6">
		<p class="pull-right">
			<a class="btn btn-primary btn-lg" href="#!/AddCustomer">Add</a>
		</p>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Age</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<tr ng-repeat="c in customers">
			<td>{{ c.FirstName }} {{ c.LastName }}</td>
			<td>{{ c.Age }}</td>
			<td>
				<a class="btn btn-default btn-xs" href ng-href="#!/EditCustomer/{{c.Id}}">
					Edit
				</a>
			</td>
		</tr>
	</tbody>
</table>